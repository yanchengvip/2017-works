<div class="row"><p class="sub-header">系统管理>道具设置>妖丹设置</p></div>
<% url = @game_prop.new_record? ? create_demon_game_props_path : update_demon_game_prop_path %>
<%= form_for @game_prop, url: url, html: {:method=>"post", class: 'bg pd_20 form-horizontal'} do |f| %>
  <div class="form-group row mt_20">
    <label for="input" class="col-sm-2 control-label">妖丹提升经验值</label>
    <div class="col-sm-8">
      <%= f.text_field :worth, class: 'form-control', type: 'number', required: 'required' %>
    </div>
  </div>

  <div class="form-group row mt_20">
    <label for="input" class="col-sm-2 control-label">兑换妖丹所需能量</label>
    <div class="col-sm-8">
      <%= f.text_field :energy_num, class: 'form-control', type: 'number', required: 'required' %>
    </div>
  </div>

  <div class="form-group row mt_20">
    <label for="input" class="col-sm-2 control-label">妖丹说明</label>
    <div class="col-sm-8">
      <%= f.text_area :remark, class: 'form-control', required: 'required',rows: '6' %>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="form-group row mt_50">
    <div class="col-sm-offset-4 col-sm-4">
      <%= link_to '取消', demons_game_props_path, class: 'btn btn-default mr_20 btn-lg', role: 'button' %>
      <%= f.submit '保存', class: 'btn btn-primary btn-lg', id: 'game_prop_submit' %>
    </div>
  </div>

<% end %>
