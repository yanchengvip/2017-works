<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="12%">奖品等级</th>
      <th width="44%">基础金额</th>
      <th width="44%">人数</th>
    </tr>
  </thead>
  <tbody>
    <% if @period_items.present? %>
      <% @period_items && @period_items.each_with_index do |period_item, i| %>
        <tr>
          <td><%= Mammon::PeriodItem::PrizeNum[period_item.prize_num] %></td>
          <td>
            <input type="number" class='custom_input_big' name="period_item[<%= period_item.prize_num %>][amount]" required min='0' placeholder="基础金额" value="<%= period_item.amount %>" readonly>元
          </td>
          <td>
            <input type="number" class='custom_input_big' name="period_item[<%= period_item.prize_num %>][prize_count]" required min='0' placeholder="整数" value="<%= period_item.prize_count %>" readonly>人
          </td>
        </tr>
      <% end %>
    <% else %>
      <% 4.times do |i| %>
        <tr>
          <td><%= Mammon::PeriodItem::PrizeNum[i] %></td>
          <td>
            <input type="number" class='custom_input_big' name="period_item[<%= i %>][amount]" required min='0' placeholder="基础金额">元
          </td>
          <td>
            <input type="number" class='custom_input_big' name="period_item[<%= i %>][prize_count]" required min='0' placeholder="整数" value="<%= period_prize_count(i) %>" readonly>人
          </td>
        </tr>
      <% end %>
    <% end %>
    <tr><td class="red ft_16" colspan="3">基础金额填写后不能修改</td></tr>
  </tbody>
</table>
