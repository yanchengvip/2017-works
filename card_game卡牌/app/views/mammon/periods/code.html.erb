<div class="row"><p class="sub-header">财神>期次管理>赠送号码</p></div>

<%= form_for @period, url: give_code_mammon_period_path, html: {:method=>"post", class: 'bg pd_20 form-horizontal'} do |f| %>

  <div class="form-group row mt_20">
    <label for="" class="col-sm-2 control-label">手机号</label>
    <div class="col-sm-8">
      <%= text_field_tag :mobile, '', placeholder: '手机号', class: 'form-control', required: "required"  %>
    </div>
  </div>

  <div class="form-group row mt_20">
    <label for="" class="col-sm-2 control-label">号码数量</label>
    <div class="col-sm-8">
      <%= text_field_tag :count, '', placeholder: '号码数量', class: 'form-control', required: "required", type: 'number', min: 1 %>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="form-group row mt_50">
    <div class="col-sm-offset-4 col-sm-4">
      <%= link_to '取消', mammon_periods_path, class: 'btn btn-default btn-lg mr_20', role: 'button' %>
      <%= f.submit '保存', class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

<% end %>
