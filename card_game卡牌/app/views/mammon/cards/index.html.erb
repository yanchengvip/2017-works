<div class="row"><p class="sub-header">财神>技能牌列表</p></div>

<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>名字</th>
        <th>号码</th>
        <!-- <th>类型</th> -->
        <th>抽取概率</th>
        <th>攻击人数</th>
        <th>获取百分比</th>
        <th>生效次数</th>
        <th colspan="3">操作</th>
      </tr>
    </thead>

    <tbody>
      <% @mammon_cards && @mammon_cards.each do |mammon_card| %>
        <tr>
          <td><%= mammon_card.name %></td>
          <td><%= mammon_card.num %></td>
          <!-- <td><%#= Mammon::Card::CARDTYPE[mammon_card.card_type] %></td> -->
          <td><%= mammon_card.percent %></td>
          <td><%= mammon_card.attack_count %></td>
          <td><%= mammon_card.effect_percent %></td>
          <td><%= mammon_card.effect_times %></td>
          <td>
            <%= link_to '编辑', edit_mammon_card_path(mammon_card), class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
