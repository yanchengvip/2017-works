  <div class="col-sm-8">
    <%= f.text_field :name, placeholder: '名字', class: 'form-control', required: "required",readonly: "true"  %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="mammon_period_num" class="col-sm-2 control-label">编号</label>
  <div class="col-sm-8">
    <%= f.text_field :num, placeholder: '编号', class: 'form-control', required: "required",readonly: "true"  %>
  </div>
</div>

