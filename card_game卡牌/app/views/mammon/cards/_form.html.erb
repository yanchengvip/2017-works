<div class="form-group row mt_20">
  <label for="mammon_attack_count" class="col-sm-2 control-label">攻击人数</label>
  <div class="col-sm-8">
    <%= f.text_field :attack_count, placeholder: '攻击人数', class: 'form-control', required: "required", type: 'number', min: 1 %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="mammon_period_num" class="col-sm-2 control-label">抽取概率</label>
  <div class="col-sm-8">
    <%= f.text_field :percent, placeholder: '抽取概率', class: 'form-control', required: "required"  %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="mammon_period_num" class="col-sm-2 control-label">获取百分比</label>
  <div class="col-sm-8">
    <%= f.text_field :effect_percent, placeholder: '获取百分比', class: 'form-control', required: "required"  %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="mammon_period_num" class="col-sm-2 control-label">生效次数</label>
  <div class="col-sm-8">
    <%= f.text_field :effect_times, placeholder: '生效次数', class: 'form-control', required: "required",readonly: "true"  %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="mammon_box_percent" class="col-sm-2 control-label">宝箱配置比例</label>
