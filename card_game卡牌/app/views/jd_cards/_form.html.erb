<div class="form-group row mt_20">
  <label for="jd_card_excel" class="col-sm-2 control-label">导入Excel文件</label>
  <div class="col-sm-8">
    <%#= file_field :jd_card_excel, placeholder: '奖品名称', class: 'form-control', required: "required", id: 'jd_card_excel' %>
    <input type="file" name="jd_card_excel" id="jd_card_excel" class="form-control" required>
    <p class="red">excel文件，格式为：文件名.xlsx</p>
  </div>
</div>


<div class="clearfix"></div>

<div class="form-group row mt_30">
  <div class="col-sm-offset-4 col-sm-4">
    <%= link_to '取消', jd_cards_path, class: 'btn btn-default mr_20 btn-lg', role: 'button' %>
    <%= f.submit '上传', class: 'btn btn-primary btn-lg', id: 'jd_card_submit' %>
  </div>
</div>

<legend class="bg_tr mt_30"><p>Excel格式：</p></legend>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>卡号</th>
      <th>密码</th>
      <th>金额（元）</th>
    </tr>
  </thead>
  <tbody>
    <% 3.times do |i| %>
      <tr>
        <td><%= 10000 + i %></td>
        <td><%= 'abcdef' %></td>
        <td><%= 100.0 + i %></td>
      </tr>
    <% end %>
  </tbody>
</table>
