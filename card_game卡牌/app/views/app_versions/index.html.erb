<p class="sub-header">系统管理>版本管理>版本列表</p>

<div class="lead text-center well">
  <p><%= link_to '新增版本', new_app_version_path, class: 'btn btn-primary btn-lg', role: 'button' %></p>
</div>

<div class="">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>平台</th>
        <th>版本号</th>
        <th>描述</th>
        <th>更新时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @app_versions.each_with_index do |app_version, index| %>
      <tr>
        <td><%= app_version.app_name %></td>
        <td><%= app_version.attributes['version'] %></td>
        <td><%= app_version.desc %></td>
        <td><%= app_version.update_time&.strftime("%Y-%m-%d %H:%m:%S") %></td>
        <td>
          <%= link_to '编辑', edit_app_version_path(app_version), role: 'button', class: 'btn btn-primary btn-sm' %>
          <%= link_to '删除', "javascript:void(0)", onclick: "app_version_delete(#{app_version.id}, '#{app_version.app_name}', '#{app_version.version}')", role: 'button', class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @app_versions %>

<%= render partial: 'del_modal' %>
