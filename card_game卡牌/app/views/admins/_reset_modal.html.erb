<!-- 礼包删除modal -->
<div class="modal fade" id="resetPwdModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="exampleModalLabel">重置密码</h4>
      </div>
        <div class="modal-body">
          <h3>确定重置<strong><span id="admin_name" class="red"></span></strong>的密码吗？</h3>

          <input type="hidden" id="reset_admin_id">

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
          <button type="button" class="btn btn-primary" id="reset_submit">确定</button>
        </div>
    </div>
  </div>
</div>

<%= render partial: 'packages/error_modal'  %>

<script type="text/javascript">
  $(function(){
    $('#reset_submit').on('click', function(){
      var item_id = $('#reset_admin_id').val()
      // console.log(item_id)
      $.ajax({
        type: "post",
        url: '/admins/' + item_id + '/reset_pwd',
        data: { },
        success: function(result){
          if(result.status == 200){
            $('#resetPwdModal').modal('hide')
            elert(result.msg)
          }else{
            $('#resetPwdModal').modal('hide')
            elert(result.msg)
          }
        },
        error: function(XMLHttpResponse){
          $('#resetPwdModal').modal('hide')
          elert('重置失败')
        }
      })

    })
  })
</script>
