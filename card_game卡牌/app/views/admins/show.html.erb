<p class="sub-header">系统管理>账户管理>个人信息</p>

<div class="lead text-center well">
  <p><%= link_to '修改个人信息', edit_admin_path(@admin), class: 'btn btn-primary btn-lg', role: 'button' %></p>
</div>

<div class="form-group row">
  <label for="msg_title" class="col-sm-1 col-form-label">用户登录名：</label>
  <div class="col-sm-6">
    <%= @admin.nickname %>
  </div>
</div>

<div class="form-group row">
  <label for="msg_title" class="col-sm-1 col-form-label">登录密码：</label>
  <div class="col-sm-6">
    ********
    <% if current_user.id == @admin.id %>
      <%= link_to '修改登录密码', change_pwd_admin_path(@admin), class: 'btn btn-primary ml_50' %>
    <% end %>
  </div>
</div>

<div class="form-group row">
  <label for="msg_title" class="col-sm-1 col-form-label">账户角色：</label>
  <div class="col-sm-6">
    <%= @admin.role_names %>
  </div>
</div>

<div class="form-group row">
  <label for="msg_title" class="col-sm-1 col-form-label">姓名：</label>
  <div class="col-sm-6">
    <%= @admin.name %>
  </div>
</div>

<div class="form-group row">
  <label for="msg_title" class="col-sm-1 col-form-label">手机号：</label>
  <div class="col-sm-6">
    <%= @admin.phone %>
  </div>
</div>

<div class="form-group row">
  <label for="msg_title" class="col-sm-1 col-form-label">邮箱：</label>
  <div class="col-sm-6">
    <%= @admin.email %>
  </div>
</div>
