<p class="sub-header">系统管理>资源管理>资源列表</p>
<div class="row placeholders">
  <a href="/authority_resources/new" class="btn btn-primary btn-lg" role="button">新增权限</a>
</div>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>资源ID</th>
      <th>权限名称</th>
      <th>资源名称</th>
      <th>操作名称</th>
      <th>描述</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @resources.each do |r| %>
        <tr>
          <td><%=r.id %></td>
          <td><%=r.name %></td>
          <td><%= r.model_n %></td>
          <td><%= r.action_n %></td>
          <td><%= r.desc %></td>
          <td>
            <a href="javascript:void(0)" onclick="obj_delete_modal(<%= r.id%>,'<%= r.name%>')" class="btn btn-info btn-sm ">删除</a>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= paginate @resources %>

<%= render 'shared/obj_delete_modal', locals: {title: '资源删除', url: '/authority_resources/destroy'} %>