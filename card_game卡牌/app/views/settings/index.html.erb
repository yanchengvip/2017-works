<div class="row"><p class="sub-header">宝箱管理>宝箱设置>配置</p></div>

<%#= render partial: 'search' %>

<div class="row mt_20 mb_20">
  <%= link_to '新增配置', new_setting_path, class: 'btn btn-primary', role: 'button' %>
  <%= link_to '活跃用户定义', active_user_settings_path, class: 'btn btn-info', role: 'button' %>
</div>

<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>键</th>
        <th width="20%">值</th>
        <th>说明</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @settings && @settings.each_with_index do |setting, index| %>
      <tr id="tr_<%= setting.id %>">
        <td><%= setting.id %></td>
        <td><%= setting.var %></td>
        <td><%#= setting.value %>
          <%= truncate(setting.value, length: 60, omission: '...') %>
        </td>
        <td><%= setting.memo %></td>
        <td>
          <%= link_to '编辑', edit_setting_path(setting), class: 'btn btn-sm btn-primary' %>
          <%#= link_to '删除', setting_path(setting), method: :delete, data: {confirm: '确定删除吗？'}, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @settings %>
