<div class="row"><p class="sub-header">商品管理>商品管理>兑奖阁商品分类</p></div>

<%= render partial: 'search' %>

<div class="row mt_20 mb_20">
  <%= link_to '新增分类', new_mall_product_tag_path, class: 'btn btn-primary', role: 'button' %>
</div>

<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>分类名称</th>
        <th>排序</th>
        <th>启用状态</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @mall_product_tags && @mall_product_tags.each_with_index do |mall_product_tag, index| %>
      <tr id="tr_<%= mall_product_tag.id %>">
        <td><%= mall_product_tag.id %></td>
        <td><%= mall_product_tag.name %></td>
        <td><%= mall_product_tag.order_num %></td>
        <td><%= mall_product_tag.status ? '启用' : '禁用' %></td>
        <td>
          <%= link_to '查看', mall_product_tag_path(mall_product_tag), class: 'btn btn-sm btn-info' %>
          <%= link_to '编辑', edit_mall_product_tag_path(mall_product_tag), class: 'btn btn-sm btn-primary' %>
          <% if mall_product_tag.status %>
            <%= link_to '停用', "javascript:void(0)", onclick: "mall_product_tag_able(#{mall_product_tag.id}, '#{mall_product_tag.name}', 0)", role: 'button', class: 'btn btn-sm btn-danger' %>
          <% else %>
            <%= link_to '启用', "javascript:void(0)", onclick: "mall_product_tag_able(#{mall_product_tag.id}, '#{mall_product_tag.name}', 1)", role: 'button', class: 'btn btn-sm btn-success' %>
          <% end %>
          <%# if game_type.status == 0 %>
            <%#= link_to '删除', "javascript:void(0)", onclick: "game_type_delete(#{game_type.id}, '#{game_type.name}')", role: 'button', class: 'btn btn-sm btn-danger' %>
          <%# end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @mall_product_tags %>

<%= render partial: 'able_modal' %>




