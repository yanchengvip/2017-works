<div class="form-group row mt_20">
  <label for="mall_product_tag_name" class="col-sm-2 control-label">分类名称</label>
  <div class="col-sm-8">
    <%= f.text_field :name, placeholder: '分类名称', class: 'form-control', required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="mall_product_tag_order_num" class="col-sm-2 control-label">排序</label>
  <div class="col-sm-8">
    <%= f.text_field :order_num, placeholder: '排序', class: 'form-control', required: "required", type: 'number', min: 0 %>
  </div>
</div>

<div class="form-group row">
    <label class="col-sm-2">启用状态</label>
    <div class="col-sm-8">
      <div class="radio">
        <label class="mr_30"><%= f.radio_button :status, true %>启用</label>
        <label><%= f.radio_button :status, false %>停用</label>
      </div>
    </div>
  </div>

<div class="clearfix"></div>

<div class="form-group row mt_50">
  <div class="col-sm-offset-1 col-sm-4">
    <%= link_to '取消', mall_product_tags_path, class: 'btn btn-default mr_20', role: 'button' %>
    <%= f.submit '保存', class: 'btn btn-primary', id: 'mall_product_tag_submit' %>
  </div>
</div>

