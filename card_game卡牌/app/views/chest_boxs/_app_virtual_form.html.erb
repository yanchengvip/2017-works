<tr class="fields content_tr">
  <td>
    <%= select_tag "app_virtual_chest_box_prizes[][level]", options_for_select(ChestBoxPrize::LEVEL.to_a.map(&:reverse), {}), required: 'required', class: 'level' %>
  </td>
  <td>
    <%= select_tag "app_virtual_chest_box_prizes[][chest_prize_id]", options_for_select([["无", nil]] + ChestPrize.active.where.not(prize_type: [1, 7, 9,10]).select('id, name').map{|cp| [cp.name, cp.id]}, {}), required: 'required', class: 'game_select2 chest_prize', style: "width: 150px !important;" %>
  </td>
  <td>
    <input type="hidden" class="price">
    <input type="number" name="app_virtual_chest_box_prizes[][base_num]" min="0" placeholder="奖品数量" class="prize_num" required value="0" min="0" style="width: 80px !important;">
    <input type="hidden" name="app_virtual_chest_box_prizes[][prize_type]" value="6">
  </td>
  <td></td>
  <td class="worth_td hide">
    <input type="number" name="app_virtual_chest_box_prizes[][worth]" min="0" placeholder="奖品总价值" class="worth" required value="0" min="0" readonly="readonly" style="width: 80px !important;">
  </td>
  <!-- <td class="user_td">
    <input type="text" name="app_virtual_chest_box_prizes[][user_id]" placeholder="用户id" class="user_id" readonly="readonly" style="width: 100px !important;">
  </td> -->
  <td>
    <input type="number" name="app_virtual_chest_box_prizes[][odds]" placeholder="概率" required min="0" style="width: 80px !important;" step='0.01' class="virtual_odds">%
  </td>
  <td>
    <%= select_tag "app_virtual_chest_box_prizes[][is_prior]", options_for_select(ChestPrize::IS_PRIOR.to_a.map(&:reverse), 0), required: 'required', class: 'is_prior' %>
  </td>
  <td>
    <input type="number" name="app_virtual_chest_box_prizes[][sort_num]" min="0" value="0" placeholder="越大越前" required style="width: 80px !important;">
  </td>
  <td>
    <%= link_to '删除', 'javascript:void(0)', class: 'del_item_new' %>
  </td>
</tr>

<script type="text/javascript">
  $(function(){
    $(".game_select2").select2()
  })
</script>
