<!-- <div id="prize_div"> -->
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>奖品级别</th>
        <th>奖品名称</th>
        <th>奖品数量</th>
        <th>剩余数量</th>
        <th class="hide">奖品总价值</th>
        <!-- <th>指定获得</th> -->
        <th>概率</th>
        <th>优先展示</th>
        <th>排序</th>
        <th></th>
      </tr>
    </thead>
    <tbody id="app_virtual_prizes_body">
      <% @app_virtual_chest_box_prizes && @app_virtual_chest_box_prizes.each do |box_prize| %>
        <tr id="tr_<%= box_prize.id %>">
          <input type="hidden" name="app_virtual_chest_box_prizes[][id]" value="<%= box_prize.id %>">
          <input type="hidden" name="app_virtual_chest_box_prizes[][prize_type]" value="6">
          <td>
            <%= select_tag "app_virtual_chest_box_prizes[][level]", options_for_select(ChestBoxPrize::LEVEL.to_a.map(&:reverse), box_prize.level), required: 'required', class: 'level', style: "width: 80px !important;" %>
          </td>
          <td>
            <%= select_tag "app_virtual_chest_box_prizes[][chest_prize_id]", options_for_select([["无", nil]] + ChestPrize.active.where.not(prize_type: [1, 7, 9,10]).select('id, name').map{|cp| [cp.name, cp.id]}, box_prize.chest_prize_id), required: 'required', class: 'game_select2 chest_prize', style: "width: 150px !important;" %>
          </td>
          <td>
            <input type="hidden" class="price" value="<%= box_prize.chest_prize&.price %>">
            <input type="number" name="app_virtual_chest_box_prizes[][base_num]" value="<%= box_prize.base_num %>" min="0" placeholder="奖品数量" class="prize_num" required style="width: 80px !important;">
          </td>
          <td><%= box_prize.left_num %></td>
          <td class="worth_td hide">
            <input type="number" name="app_virtual_chest_box_prizes[][worth]" value="<%= box_prize.worth %>" min="0" placeholder="奖品总价值" class="worth" required readonly="readonly" style="width: 80px !important;">
          </td>
          <!-- <td class="user_td">
            <input type="text" name="app_virtual_chest_box_prizes[][user_id]" value="<%#= box_prize.user_id %>" placeholder="用户id" class="user_id" readonly="readonly" style="width: 100px !important;">
          </td> -->
          <td>
            <input type="number" name="app_virtual_chest_box_prizes[][odds]" value="<%= box_prize.odds %>" placeholder="概率" style="width: 80px !important;" required min="0" step='0.01' class="virtual_odds">%
          </td>
          <td>
            <%= select_tag "app_virtual_chest_box_prizes[][is_prior]", options_for_select(ChestPrize::IS_PRIOR.to_a.map(&:reverse), box_prize.is_prior ? 1 : 0), required: 'required', class: 'is_prior' %>
          </td>
          <td>
            <input type="number" name="app_virtual_chest_box_prizes[][sort_num]" value="<%= box_prize.sort_num %>" min="0" placeholder="越大越前" required style="width: 80px !important;">
          </td>
          <td>
            <% unless params[:action] == 'show' %>
              <%= link_to '删除', 'javascript:void(0)', class: "del_box_prize_origin", id: "chest_box_prize_#{box_prize.id}" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<!-- </div> -->
<%= render 'del_box_prize_modal'%>

<script type="text/javascript">
  // $(document).on('turbolinks:load', function () {
  $(function(){
    $('#add_chest_prize_app_virtual').on('click', function(){
      $.ajax({
        type: 'get',
        url: '/chest_boxs/get_prize_form',
        data: { random_id: 'wlf' + Number($('#random6_id').text()), prize_type: 6},
        success: function(result){
          $('#app_virtual_prizes_body').append(result)
        },
        error: function(XMLHttpResponse){
          alert('添加失败')
        }
      })
      $('#random6_id').text(Number($('#random6_id').text()) + 1)
    })
  })

  $(document).on('turbolinks:load', function () {
    $('.del_box_prize_origin').on('click', function(){
      $('#delBoxPrizeModal').modal('show')
      var this_id = $(this).attr('id')
      $('#delBoxPrizeModal').on('shown.bs.modal',function(){
        console.log(this_id)
        $('#del_box_prize_id').val(this_id.split('_')[3])
        // $('#belong_extreme_chest_id').val(this_id.split('_')[0])
      })
    })
  })

</script>
