<div class="row">
  <p class="sub-header">营销管理>能量管理>用户能量</p>
</div>

<%= render partial: 'search' %>

<div class="row mt_20 mb_20 text-center"><%= link_to '赠送能量', new_give_card_user_owns_path, class: 'btn btn-primary btn-lg' %></div>
<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>用户ID</th>
        <th>登录名</th>
        <th>手机</th>
        <th>用户当前总能量数量</th>
      </tr>
    </thead>
    <tbody>
      <% @account_tickets && @account_tickets.each_with_index do |account_ticket, index| %>
      <tr id="tr_<%= account_ticket.id %>">
        <td><%= account_ticket.user_id %></td>
        <td><%= account_ticket.user&.login_name %></td>
        <td><%= account_ticket.user&.mobile %></td>
        <td><%= account_ticket.energy_total_amount %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


<%= paginate @account_tickets %>

