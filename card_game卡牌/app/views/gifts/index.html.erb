<p class="sub-header">系统管理>其它管理>赠品管理</p>

<%= render partial: 'search' %>

<div class="lead">
  <p><%= link_to '添加赠品', new_gift_path, class: 'btn btn-primary', role: 'button' %></p>
</div>

<div class="">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>名称</th>
        <th>启用/禁用</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @gifts.each_with_index do |gift, index| %>
      <tr>
        <td><%= gift.name %></td>
        <td><%= status_str(gift.status) %></td>
        <td>
          <%= link_to '查看', gift_path(gift), role: 'button', class: 'btn btn-info'  %>
          <%= link_to '修改', edit_gift_path(gift), role: 'button', class: 'btn btn-primary' %>
          <%#= link_to '删除', card_path(card), method: :delete, data: {confirm: '确定要删除吗'}, role: 'button', class: 'btn btn-danger' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @gifts %>
