<div class="form-group row">
  <table class="table table-striped table-hover" id="extreme_chest_items_table">
    <thead>
      <tr>
        <th>赠品类型</th>
        <th width="30%">赠品内容<span class="gift_range_text"></span></th>
        <th>赠品数量</th>
        <th></th>
      </tr>
    </thead>
    <tbody id="gift_body">
      <% if !@gift.new_record? %>
        <%= render partial: 'item_own' %>
      <% end %>
    </tbody>
  </table>
  <p data-container="body" data-toggle="popover" data-trigger="focus" data-placement="bottom" data-content="没有添加赠品内容" id="gift_range_tip"></p>

  <%= link_to '添加', 'javascript:void(0)', id: 'add_gift_item', class: 'mt_50' %>
</div>

<%= render partial: 'gift_type_modal' %>


<script type="text/javascript">
  // $(document).on('turbolinks:load', function () {
  $(function(){
    // 添加
    $('#add_gift_item').on('click', function(){
      $('#choseGiftTypeModal').modal('show')
    })
  })
</script>
