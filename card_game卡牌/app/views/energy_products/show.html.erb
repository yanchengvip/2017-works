<p class="sub-header">能量商城>能量商城>查看能量商品</p>

<% if @energy_product.status == 0 %>
  <div class="lead text-right well">
    <p><%= link_to '修改能量商品', edit_energy_product_path(@energy_product), class: 'btn btn-primary', role: 'button' %></p>
  </div>
<% end %>

<div class="panel panel-info">
  <!-- Default panel contents -->
  <div class="panel-heading"><strong>基础信息</strong></div>
  <ul class="list-group">

    <li class="list-group-item ">能量商品ID：<span class="red"><%= @energy_product.id %></span></li>
    <li class="list-group-item">名称：<span class="red"><%= @energy_product.name %></span></li>
    <li class="list-group-item">上架状态：<%= shelf_status(@energy_product) %></li>
    <li class="list-group-item">购买能量值：<%= @energy_product.energy_count %></li>
    <li class="list-group-item">价格：<span class="red"><%= @energy_product.price.to_f %></span></li>
    <li class="list-group-item">排序：<%= @energy_product.order_num %></li>

    <li class="list-group-item">缩略图：
      <div class="row">
        <% if @energy_product.thumbnail %>
          <%= image_tag FASTDFSCONFIG[:fastdfs][:tracker_url] + @energy_product.thumbnail, width: 100, height: 100 %>
        <% end %>
      </div>
    </li>

  </ul>

  <div class="panel-heading "><strong>赠品信息</strong></div>
  <% if @energy_product_gifts.present? %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>第N次购买时</th>
          <th width="30%">赠送能量（点）</th>
          <th>显示文字</th>
        </tr>
      </thead>
      <tbody>
        <% @energy_product_gifts.each do |energy_product_gift| %>
          <tr class="fields content_tr">
            <td><%= energy_product_gift.buy_times %></td>
            <td><%= energy_product_gift.energy_count %></td>
            <td><%= energy_product_gift.show_text %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>没有赠品！</p>
  <% end %>

</div>
