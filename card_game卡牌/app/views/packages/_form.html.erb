  <%= render partial: 'package_content', locals: {f: f} %>

  <%= render partial: 'rule', locals: {f: f} %>

  <div class="form-group mt_100">
    <div class="col-sm-offset-4 col-sm-4">
      <%= link_to '取消', packages_path, class: 'btn btn-default btn-lg', role: 'button' %>
      <%= f.submit '保存', class: 'btn btn-primary mr_20 btn-lg', data: {:disable_with => "提交中..."} %>
