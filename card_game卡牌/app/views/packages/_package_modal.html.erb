<!-- 礼包删除modal -->
<div class="modal fade" id="deletePackagetModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="exampleModalLabel">礼包删除</h4>
      </div>
      <!-- <form action="/packages/destroy" method="post"> -->
        <!-- <input name="_method" type="hidden" value="delete" /> -->
        <div class="modal-body">
          <h3>确定删除礼包：<span id="del_package_name"></span>吗？</h3>

          <input type="hidden" id="del_package_id">

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
          <button type="button" class="btn btn-primary" id="delete_package">确定</button>
        </div>
      <!-- </form> -->
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function(){
    $('#delete_package').on('click', function(){
      var pid = $('#del_package_id').val()
      $.ajax({
        type: "delete",
        url: '/packages/' + pid,
        data: { },
        success: function(result){
          if(result.status == 200){
            // window.location.reload();
            $('#tr_' + pid).remove()
            $('#deletePackagetModal').modal('hide')
          }else{
            $('#deletePackagetModal').modal('hide')
            alertTX('删除失败')
          }
        },
        error: function(XMLHttpResponse){
          $('#deletePackagetModal').modal('hide')
          alertTX('删除失败')
        }
      })

    })
  })
</script>
