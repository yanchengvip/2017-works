<div class="form-group row mt_20">
  <label for="mail_title" class="col-sm-2 control-label">回收道具名称</label>
  <div class="col-sm-8">
    <%= f.text_field :name, placeholder: '回收道具名称', class: 'form-control', required: "required" %>
  </div>
</div>
<div class="form-group row mt_20">
  <label for="mail_title" class="col-sm-2 control-label">最大花费</label>
  <div class="col-sm-8">
    <%= f.text_field :total_cost, placeholder: '最大花费', class: 'form-control', required: "required" %>
  </div>
</div>
<div class="form-group row mt_20">
  <label for="mail_title" class="col-sm-2 control-label">开始时间</label>
  <div class="col-sm-8">
    <%= f.text_field :time_begin, placeholder: '开始时间', class: 'form-control datetime_picker_recovery1', required: "required" %>
  </div>
</div>
<div class="form-group row mt_20">
  <label for="mail_title" class="col-sm-2 control-label">结束时间</label>
  <div class="col-sm-8">
    <%= f.text_field :time_end, placeholder: '结束时间', class: 'form-control datetime_picker_recovery2', required: "required" %>
  </div>
</div>
<div class="form-group row mt_20">
  <label for="mail_title" class="col-sm-2 control-label">是否是规则</label>
  <div class="col-sm-8">
    <% if @recovery.is_rule %>
      <div class="radio">
        <label class="mr_30">
          <input class="form-check-input" type="radio" value="1" name="is_rule"  checked="checked">是
        </label>
        <label class="mr_30">
          <input class="form-check-input" type="radio" value="0" name="is_rule">否
        </label>
      </div>
    <% else %>
      <div class="radio">
        <label class="mr_30">
          <input class="form-check-input" type="radio" value="1" name="is_rule" checked="checked">是
        </label>
        <label class="mr_30">
          <input class="form-check-input" type="radio" value="0" name="is_rule">否
        </label>
      </div>
    <% end %>
  </div>
</div>
<div class="form-group row mt_20">
  <label for="mail_mail_type_id" class="col-sm-2 control-label isrequire">奖品ID</label>
  <div class="col-sm-8">
    <%= f.select :chest_prize_id, options_for_select(ChestPrize.active.where(:prize_type => 6).map{|mt| [mt.name, mt.id]}, @recovery.chest_prize_id), {}, class: 'form-control', required: "required" %>
  </div>
</div>
<div class="form-group row mt_20">
  <label for="mail_mail_type_id" class="col-sm-2 control-label isrequire">奖品类型</label>
  <div class="col-sm-8">
    <select class="form-control" required="required" name="recovery[chest_prize_type]" id="recovery_chest_prize_type"><option value=""></option>
      <option value="6">现金券</option>
    </select>
    <!-- <%= f.select :chest_prize_type, options_for_select(ChestPrize::PRIZE_TYPE.map{|k, v| [v, k]}, @recovery.chest_prize_type), {}, class: 'form-control', required: "required" %> -->
  </div>
</div>


