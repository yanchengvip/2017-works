<div class="row">
  <p class="sub-header">赛场管理>赛场类型>赛场列表</p>
</div>

<%= render partial: 'search' %>

<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>赛场ID</th>
        <th>所属赛场类型</th>
        <th>开赛人数</th>
        <th>赛场轮数</th>
        <th>重宝分类</th>
        <th>开赛时间</th>
        <th>赛场状态</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @games && @games.each_with_index do |game, index| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= game.game_type&.name %></td>
        <td><%= game.game_type&.game_rule&.open_user_num %></td>
        <td><%= game.game_type&.game_rule&.round_num %></td>
        <td><%= game.game_type&.product_tag&.name %></td>
        <td><%= game.published_time&.strftime("%Y.%m.%d %H:%M") %></td>
        <td><%= game_status(game) %></td>
        <td>
          <%= link_to '查看', game_path(game), class: 'btn btn-sm btn-info' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @games %>




