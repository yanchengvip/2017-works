<div class="row placeholders well">
  <%= form_for energy_products_path, html: {method: :get, class: 'navbar-form navbar-left', id: 'search_form'} do |f| %>
    <div class="form-group row">
      <span>赛场ID：</span>
      <%= text_field_tag "q[id_eq]", params[:q][:id_eq], class: 'form-control mr_20', placeholder: '赛场ID' %>
      <span>所属赛场类型名称：</span>
      <%= text_field_tag "q[game_type_name_cont]", params[:q][:game_type_name_cont], class: 'form-control mr_20', placeholder: '所属赛场类型名称' %>
      <%#= select_tag 'q[product_tag_id_eq]', options_for_select([['请选择', nil]] + ProductTag.active.map{|pt| [pt.name, pt.id]}, params[:q][:product_tag_id_eq]), class: 'form-control game_select2 select-width-20' %>
      <span>开赛时间：</span>
      <%= text_field_tag 'q[published_time_gteq]', params[:q][:published_time_gteq], class: 'form-control mr_20', placeholder: '开赛时间 >= ' %>

      <%= f.submit '搜索', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
