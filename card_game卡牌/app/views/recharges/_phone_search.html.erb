<div class="row placeholders">
  <%= form_for phone_recharges_path, html: {method: :get, class: '', id: 'search_form'} do |f| %>
    <div class ="navbar-form navbar-left">
      <div class="form-group ">
        <span>下单时间</span>
        <%= text_field_tag 'q[created_at_gteq]', params[:q][:created_at_gteq], class: 'form-control search_time_begin', placeholder: '起始时间' %>-
        <%= text_field_tag 'q[created_at_lteq]', params[:q][:created_at_lteq], class: 'form-control mr_10 search_time_end', placeholder: '结束时间' %>
        <span>用户手机</span>
        <%= text_field_tag 'q[user_mobile_cont]', params[:q][:user_mobile_cont], class: 'form-control mr_10', placeholder: '用户手机' %>
        <span>充值号码</span>
        <%= text_field_tag 'q[number_cont]', params[:q][:number_cont], class: 'form-control mr_20', placeholder: '充值号码' %>
        <span><%= f.submit '查询', class: 'btn btn-primary ', id: "submit" %></span>
      </div>
    </div>
  <% end %>
</div>
