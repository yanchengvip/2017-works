<div class="row"><p class="sub-header">宝箱管理>充值管理>手机充值订单详情</p></div>

<%= render partial: 'phone_search' %>


<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>订单号</th>
        <th>互亿无线订单号</th>
        <th>订单渠道</th>
        <th>下单时间</th>
        <th>用户手机</th>
        <th>用户昵称</th>
        <th>充值手机</th>
        <th>充值金额</th>
        <th>充值状态</th>
        <!-- <th>操作</th> -->
      </tr>
    </thead>
    <tbody>
      <% @recharges && @recharges.each_with_index do |recharge, index| %>
      <tr id="tr_<%= recharge.id %>">
        <td><%= recharge.code %></td>
        <td><%= recharge.huyi_code %></td>
        <td>宝箱</td>
        <td><%= recharge.order_time&.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= recharge.user&.mobile %></td>
        <td><%= recharge.user&.nick_name %></td>
        <td class="key_percent"><%= recharge.number %></td>
        <td class="key_percent">¥&nbsp;<%= recharge.amount %></td>
        <td class="key_percent"><%= ChestOrder::STATUS[recharge.status] %></td>
        <!-- <td>
          <%#= link_to '获取状态', test_status_recharge_path(recharge), class: 'btn btn-invert btn-sm', role: 'button' %>
        </td> -->
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @recharges %>
