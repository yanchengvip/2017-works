<div class="row">
  <p class="sub-header">赛场管理>卡包管理>卡包列表</p>
</div>

<%= render partial: 'search' %>

<div class="row mt_20 mb_20">
  <%= link_to '添加卡包', new_card_bag_path, class: 'btn btn-primary', role: 'button' %>
</div>

<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>卡包ID</th>
        <th>卡包名称</th>
        <th>卡牌数量</th>
        <th>创建时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @card_bags && @card_bags.each_with_index do |card_bag, index| %>
      <tr id="tr_<%= card_bag.id %>">
        <td><%= card_bag.id %></td>
        <td><%= card_bag.name %></td>
        <td><%= card_bag.card_bag_items.sum(:card_num) %></td>
        <td><%= card_bag.created_at.strftime('%Y.%m.%d %H:%M') %></td>
        <td>
          <%= link_to '查看', card_bag_path(card_bag), class: 'btn btn-sm btn-info' %>
          <%= link_to '编辑', edit_card_bag_path(card_bag), class: 'btn btn-sm btn-primary' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @card_bags %>


