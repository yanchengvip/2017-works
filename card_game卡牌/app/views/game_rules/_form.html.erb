
<%= form_for @game_rule, html: { class: ''} do |f| %>

  <%= render partial: 'basic_rule', locals: {f: f} %>

  <%= render partial: 'card_rule', locals: {f: f} %>

  <div class="clearfix"></div>

  <div class="form-group row mt_50">
    <div class="col-sm-offset-4 col-sm-4">
      <%= link_to '取消', game_rules_path, class: 'btn btn-default mr_20 btn-lg', role: 'button' %>
      <%= f.submit '保存', class: 'btn btn-primary btn-lg', id: 'game_rule_submit' %>
    </div>
  </div>

<% end %>
