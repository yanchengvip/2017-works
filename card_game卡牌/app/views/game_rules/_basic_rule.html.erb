<div class="form-group row">
  <label for="game_rule_open_user_num" class="col-sm-2 control-label">开赛人数</label>
  <div class="col-sm-8">
    <div class="input-group">
      <%= f.text_field :open_user_num, id: 'game_rule_open_user_num', placeholder: '开赛人数，整数', class: 'form-control', required: "required", type: 'number', onkeyup: "calc_key_percent(this.id)" %>
