<%#= render partial: 'form' %>
<p class="sub-header">卡牌商城>卡牌促销>新建至尊宝箱</p>
<div class="row  col-sm-10">
  <form action="/extreme_chests" method="post">
    <div class="form-group row">
      <label for="extreme_chests_status" class="col-sm-2 col-form-label">*前台启用：</label>
      <div class="col-sm-6">
        <% if @extreme_chest.status %>
          <div class="radio">
            <label class="mr_30">
              <input class="form-check-input" type="radio" value="1" name="status"  checked="checked">启用
            </label>
            <label class="mr_30">
              <input class="form-check-input" type="radio" value="0" name="status">关闭
            </label>
          </div>
        <% else %>
          <div class="radio">
            <label class="mr_30">
              <input class="form-check-input" type="radio" value="1" name="status">启用
            </label>
            <label class="mr_30">
              <input class="form-check-input" type="radio" value="0" name="status"  checked="checked">关闭
            </label>
          </div>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <label for="extreme_chest_card_count" class="col-sm-2 col-form-label">*宝符数：</label>
      <div class="col-sm-6">
        <div class="input-group">
          <input type="number" name="card_count" min="1" value="<%= @extreme_chest.card_count %>" max="99999" class="form-control" required="required" placeholder="正整数" id='extreme_chest_card_count'>
          <span class="input-group-addon">个</span>
        </div>
      </div>
    </div>

    <%= render partial: 'item' %>

