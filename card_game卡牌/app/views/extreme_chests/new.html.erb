      <div class="col-sm-6">
          每天<input type="text" name="refresh_time" value="<%#= @extreme_chest.refresh_time %>" class="form-control" required="required" placeholder="00:00" id='extreme_chest_refresh_time'>
      </div>
      <div class="input-group date">
        <label class="form-check-label">
          <span class="mr_20">每天</span><input type='text' class="form-check-input" name="refresh_time" value="<%#= @extreme_chest.refresh_time %>" id="refresh_time_picker" required="required" placeholder="00:00" />
          <span class="mr_20">每天</span><input type='text' class="form-check-input" name="refresh_time" value="00:00" id="refresh_time_picker" required="required" placeholder="00:00" readonly="readonly" />
        </label>
      </div>
    </div> -->
    <input type="hidden" name="name" value="至尊宝箱">

    <div class="form-group mt_50">
      <div class="col-sm-offset-2 col-sm-4">
        <%= link_to '取消', '/extreme_chests', class: 'btn btn-default mr_20', role: 'button' %>
        <%#= f.submit '保存', class: 'btn btn-primary', data: {:disable_with => "提交中..."} %>
        <button type="submit" class="btn btn-primary" id="extreme_chests_submit">保存</button>
      </div>
    </div>

  </form>
</div>
<script type="text/javascript">
  $(function(){
    $('body').on('click', '.del_item_new', function(){
      $(this).parent().parent().remove()
    })
  })
</script>

