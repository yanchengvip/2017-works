<p class="sub-header">卡牌商城>卡牌促销>至尊宝箱列表</p>

<%= render partial: 'search' %>

<div class="lead text-right">
  <p><%= link_to '添加至尊宝箱', new_extreme_chest_path, class: 'btn btn-primary', role: 'button' %></p>
</div>

<div class="">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>名称</th>
        <th>领取条件（能量）</th>
        <!-- <th>领取人数</th> -->
        <th>启用/禁用</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @extreme_chests.each_with_index do |extreme_chest, index| %>
      <tr>
        <td><%= extreme_chest.name %></td>
        <td><%= extreme_chest.card_count %>点</td>
        <!-- <td></td> -->
        <td><%= status_str(extreme_chest.status) %></td>
        <td>
          <%= link_to '查看', extreme_chest_path(extreme_chest), role: 'button', class: 'btn btn-info btn-sm'  %>
          <%= link_to '修改', edit_extreme_chest_path(extreme_chest), role: 'button', class: 'btn btn-primary btn-sm' %>
          <%= link_to '删除', extreme_chest_path(extreme_chest), method: :delete, data: {confirm: '确定要删除吗'}, role: 'button', class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @extreme_chests %>
