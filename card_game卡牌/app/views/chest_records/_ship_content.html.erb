<div class="form-group row">
  <label for="" class="col-sm-2 col-form-label">用户ID</label>
  <div class="col-sm-10">
    <input type="text" value="<%= @address_info['userId'] %>" class="form-control" readonly="readonly">
  </div>
</div>

<div class="form-group row">
  <label for="" class="col-sm-2 col-form-label">收货人</label>
  <div class="col-sm-10">
    <input type="text" value="<%= @address_info['consignee'] %>" class="form-control" readonly="readonly">
  </div>
</div>

<div class="form-group row">
  <label for="" class="col-sm-2 col-form-label">手机号码</label>
  <div class="col-sm-10">
    <input type="text" value="<%= @address_info['mobile'] %>" class="form-control" readonly="readonly">
  </div>
</div>

<div class="form-group row">
  <label for="" class="col-sm-2 col-form-label">收货地址</label>
  <div class="col-sm-10">
    <textarea rows="3" class="form-control" readonly="readonly"><%= @address_info['detailedAddress'] %></textarea>
  </div>
</div>

<div class="form-group row">
  <label for="" class="col-sm-2 col-form-label">邮政编码</label>
