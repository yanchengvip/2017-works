  </div>
</div>

<div class="form-group row">
  <label for="" class="col-sm-2 col-form-label">快递公司</label>
  <div class="col-sm-10">
    <input type="text" value="<%= @chest_record.ship_server %>" class="form-control" readonly="readonly">
  </div>
</div>

<div class="form-group row">
  <label for="" class="col-sm-2 col-form-label">快递单号</label>
  <div class="col-sm-10">
    <input type="text" value="<%= @chest_record.ship_code %>" class="form-control" readonly="readonly">
  </div>
</div>
