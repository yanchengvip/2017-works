<div class="row placeholders">
  <form action="/mall_orders" method="get" class="navbar-form navbar-left">
    兑换时间：
    <input type="text" name="created_at_begin"  class="form-control datetime_picker_battle1" placeholder="开始时间"> ~
    <input type="text" name="created_at_end"  class="form-control datetime_picker_battle2" placeholder="结束时间">
    <button type="submit" class="btn btn-success">搜索</button>
    <button type="button" class="btn btn-success"><a href="javascript:void(0);" id= "dowload" onclick="dowload_csv(1)" style="color:#fff">导出csv</a></button>
  </form>

</div>

<p class="sub-header">奇珍商城>兑换订单>订单列表</p>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>订单号</th>
      <th>兑换时间</th>
      <th>商品名称</th>
      <th>购买人</th>
      <th>通兑支付情况</th>
      <th>订单状态</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @mall_orders.each do |order|%>
        <tr>
          <td><%= order.order_code %></td>
          <td><%= datetime_format order.created_at %></td>
          <td><%= order.product_name %></td>
          <td><%= order.user.name %></td>
          <td><%= MallOrder::PAYTYPE[order.pay_type.to_i] %></td>
          <td><%= MallOrder::STATUS[order.status.to_i] %></td>
        </tr>
    <% end %>

    </tbody>
  </table>
</div>

<%=paginate @mall_orders%>
