<div class="row placeholders well">
  <%= form_for orders_battle_products_path, html: {method: :get, class: 'navbar-form navbar-left', id: 'search_form'} do |f| %>
    <div class="form-group row">
      <span>用户手机：</span>
      <%= text_field_tag "q[mobile_eq]", params[:q][:mobile_eq], class: 'form-control', placeholder: '用户手机' %>
      <span>用户昵称：</span>
      <%= text_field_tag "q[user_nick_name_cont]", params[:q][:user_nick_name_cont], class: 'form-control', placeholder: '用户昵称' %>
      <span>兑换时间：</span>
      <%= text_field_tag 'q[created_at_gteq]', params[:q][:created_at_gteq], class: 'form-control', placeholder: '订单时间' %>-
      <%= text_field_tag 'q[created_at_lteq]', params[:q][:created_at_lteq], class: 'form-control', placeholder: '订单时间' %>

      <%= f.submit '查询', class: 'btn btn-primary ml_50' %>
    </div>
  <% end %>
</div>
