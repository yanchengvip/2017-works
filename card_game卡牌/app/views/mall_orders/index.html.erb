<p class="sub-header">兑奖阁管理>兑奖阁管理>兑换记录</p>
<%= render partial: 'search' %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>订单号</th>
      <th>兑换时间</th>
      <th>商品名称</th>
      <th>兑换方式</th>
      <th>消耗功勋/微集分数量</th>
      <th>用户手机</th>
      <th>用户昵称</th>
    </tr>
    </thead>
    <tbody>
      <% @mall_orders.each do |order|%>
          <tr>
            <td><%= order.order_code %></td>
            <td><%= datetime_format order.created_at %></td>
            <td><%= order.product_name %></td>
            <td><%= order.pay_type == 1 ? '功勋' : '微集分' %></td>
            <td><%= order.pay_type == 1 ? order.glory : order.micro_score %></td>
            <td><%= order.mobile %></td>
            <td><%= order.user&.nick_name %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%=paginate @mall_orders%>
