<table class="table table-striped table-hover">
  <thead>
    <tr class="">
      <th></th>
      <th>第一轮</th>
      <th>第二轮</th>
      <th>第三轮</th>
      <th>第四轮</th>
      <th>第五轮</th>
      <th>第六轮</th>
    </tr>
  </thead>
  <tbody>

    <% 2.times do |index| %>
      <% title = index == 0 ? '最后击杀饕餮用户，获得奖励能量' : '对饕餮伤害最大用户，获得奖励能量' %>
      <% name_str = index == 0 ? 'last_blood_energy' : 'max_blood_energy' %>
      <tr>
        <td width="10%"><%= title %></td>
        <% 6.times do |i| %>
          <td>
            <% if @glutton_dead_prizes.present? %>
              <input type="number" name="round[<%= name_str %>_<%= i + 1 %>]" min="1" max="999999" required placeholder='整数' value="<%= @glutton_dead_prizes[i]&.send(name_str) %>">点
            <% else %>
              <input type="number" name="round[<%= name_str %>_<%= i + 1 %>]" min="1" max="999999" required placeholder='整数'>点
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>
