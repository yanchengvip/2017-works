<p class="sub-header">商品管理>商品管理>订单管理</p>
<%= render partial: 'order_search' %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>ID</th>
      <th>订单号</th>
      <th>订单类型</th>
      <th>下单时间</th>
      <th>用户手机</th>
      <th>用户昵称</th>
      <!-- <th>商品名称</th> -->
      <!-- <th>购买人</th> -->
      <!-- <th>兑换方式</th> -->
      <th>订单状态</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @mall_orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.order_code %></td>
          <td><%#= order.order_type %><%= MallOrder::ORDER_TYPE[order.order_type] %></td>
          <td><%= datetime_format order.created_at %></td>
          <td>
            <% if order.order_type == 3 %>
              <%= order.mobile %>
            <% else  %>
              <%= order.battle_winning_record&.mobile %>
            <% end %>
          </td>
          <td><%= order.user&.nick_name %></td>
          <!-- <td><%#= order.product_name %></td> -->
          <!-- <td><%#= order.user.name %></td> -->
          <!-- <td><%#= MallOrder::PAYTYPE[order.pay_type.to_i] %></td> -->
          <td><%= MallOrder::STATUS[order.status.to_i] %></td>
          <td>
            <a href="/battle_products/order_edit?order_id=<%= order.id %>/" class="btn btn-primary btn-sm">管理订单</a>
          </td>
        </tr>
    <% end %>

    </tbody>
  </table>
</div>

<%= paginate @mall_orders %>
<script type="text/javascript">
  $(function(){
    $("#download").click(function () {
      $("#search_form")[0].action = '/battle_products/orders.csv'
      $("#search_form").submit()
      $("#search_form")[0].action = '/battle_products/orders'
    })
    $("#submit").click(function () {
      $("#search_form")[0].action = '/battle_products/orders'
      $("#search_form").submit()
    })
  })
</script>
