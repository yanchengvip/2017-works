<tr class="fields content_tr">
  <td>
    <%= select_tag "bxf_rule_items[][chest_prize_id]", options_for_select([["无", nil]] + ChestPrize.active.where(prize_type: 5).select('id, name').map{|cp| [cp.name, cp.id]}, {}), required: 'required', class: 'game_select2 chest_prize', style: "width: 200px !important;" %>
    <input type="hidden" name="bxf_rule_items[][prize_type]" value="3">
  </td>
  <td>
    <input type="number" name="bxf_rule_items[][count]" min="1" placeholder="数量" required>
