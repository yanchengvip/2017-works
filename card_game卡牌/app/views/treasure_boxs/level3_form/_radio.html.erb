<table class="table" id="jackpot_product_level3_table"></table>
<!-- treasure_boxs -->

<script type="text/javascript">
  $(function(){
    $('.level3_radio').on('click', function(){
      var radio_val = $(this).val()
      var treasure_box_id = $('#treasure_box_id').val()
      $.ajax({
        type: 'get',
        url: "/treasure_boxs/"+treasure_box_id+"/level3_form",
        data: {type: radio_val},
        success: function(result){
          $('#jackpot_product_level3_table').html(result)
        },
        error: function(XMLHttpResponse){
          elert('网络错误')
        }
      })
    })
  })
</script>
