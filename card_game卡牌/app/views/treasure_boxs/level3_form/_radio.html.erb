<table class="table">
  <!-- table-striped table-hover -->
  <tr class="bg_tr">
    <th></th>
    <th>
      <span class="mr_100"><input type="radio" name="jackpot_product_level3[type]" value="1" class="level3_radio">能量</span>
      <span class="mr_100"><input type="radio" name="jackpot_product_level3[type]" value="2" class="level3_radio">功勋</span>
      <span class="mr_100"><input type="radio" name="jackpot_product_level3[type]" value="3" class="level3_radio">道具</span>
