<div class="row placeholders well">
  <%= form_for energy_products_path, html: {method: :get, class: 'navbar-form navbar-left', id: 'search_form'} do |f| %>
    <div class="form-group row">
      <span>赛场功勋价值数：</span>
      <%= text_field_tag "q[glory_num_eq]", params[:q][:glory_num_eq], class: 'form-control mr_20', placeholder: '赛场功勋价值数' %>
      <span>创建时间：</span>
      <%= text_field_tag 'q[created_at_gteq]', params[:q][:created_at_gteq], class: 'form-control mr_20', placeholder: '创建时间 >= ' %>

      <%= f.submit '搜索', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
