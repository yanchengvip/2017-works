<p class="sub-header">系统管理>卡牌管理>礼包分类列表</p>

<div class="lead text-center well">
  <p><%= link_to '添加分类', new_package_type_path, class: 'btn btn-primary btn-lg', role: 'button' %></p>
</div>

<div class="">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>序号</th>
        <th>分类名称</th>
        <th>销售渠道</th>
        <th>最后更新</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @package_types.each_with_index do |package_type, index| %>
      <tr id="tr_<%= package_type.id %>">
        <td><%= index + 1 %></td>
        <td><%= package_type.name %></td>
        <td><%= Package::SALECHANNEL[package_type.sale_channel] %></td>
        <td><%= package_type.updated_at %></td>
        <td>
          <%#= link_to '查看', card_path(card), role: 'button', class: 'btn btn-info'  %>
          <%= link_to '修改', edit_package_type_path(package_type), role: 'button', class: 'btn btn-primary btn-sm' %>
          <%#= link_to '删除', card_path(card), method: :delete, data: {confirm: '确定要删除吗'}, role: 'button', class: 'btn btn-danger' %>
          <%= link_to '删除', "javascript:void(0)", onclick: "package_type_delete(#{package_type.id}, '#{package_type.name}')", role: 'button', class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @package_types %>

<%= render partial: 'del_modal' %>
