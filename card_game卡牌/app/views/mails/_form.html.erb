<div class="form-group row mt_20">
  <label for="mail_mail_type_id" class="col-sm-2 control-label isrequire">邮件类别</label>
  <div class="col-sm-8">
    <%= f.select :mail_type_id, options_for_select(MailType.active.map{|mt| [mt.name, mt.id]}, @mail.mail_type_id), {}, class: 'form-control', required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="mail_title" class="col-sm-2 control-label">邮件标题</label>
  <div class="col-sm-8">
    <%= f.text_field :title, placeholder: '邮件标题', class: 'form-control', required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="mail_sub_title" class="col-sm-2 control-label">称谓</label>
  <div class="col-sm-8">
    <%= f.text_field :sub_title, placeholder: '称谓', class: 'form-control', required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="mail_content" class="col-sm-2 control-label">邮件正文</label>
  <div class="col-sm-8">
    <%= f.text_area :content, placeholder: '邮件正文', class: 'form-control', required: "required", rows: 9 %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="input" class="col-sm-2 control-label">发件人头像</label>
  <div class="col-sm-8">
    <%= render 'images/upload_single_image' %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="mail_sender_name" class="col-sm-2 control-label">发件人昵称</label>
  <div class="col-sm-8">
    <%= f.text_field :sender_name, placeholder: '发件人昵称', class: 'form-control', required: "required" %>
  </div>
</div>

