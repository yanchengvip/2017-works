<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="12%"></th>
      <th width="44%">通关率</th>
      <th width="44%">张数</th>
    </tr>
  </thead>
  <tbody>
    <% if @game_league.game_league_battles.present? %>
      <% @game_league.game_league_battles && @game_league.game_league_battles.each_with_index do |game_league_battle, i| %>
        <tr>
          <td><%= "第#{game_league_battle.battle_num}场" %></td>
          <td>
            <input type="number" class='custom_input_big' name="robot_difficulty[<%= game_league_battle.battle_num %>][robot_ratio]" required min='0' placeholder="百分比整数" value="<%= game_league_battle.robot_ratio %>">%
          </td>
          <td>
            高出用户<input type="number" class='custom_input_big' name="robot_difficulty[<%= game_league_battle.battle_num %>][robot_num]" required min='0' placeholder="整数" value="<%= game_league_battle.robot_num %>">张技能牌
          </td>
        </tr>
      <% end %>
    <% else %>
      <% 3.times do |i| %>
        <tr>
          <td><%= "第#{i+1}场" %></td>
          <td>
            <input type="number" class='custom_input_big' name="robot_difficulty[<%= i+1 %>][robot_ratio]" required min='0' placeholder="百分比整数">%
          </td>
          <td>
            高出用户<input type="number" class='custom_input_big' name="robot_difficulty[<%= i+1 %>][robot_num]" required min='0' placeholder="整数">张技能牌
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
