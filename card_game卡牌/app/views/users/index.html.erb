<div class="row placeholders">
  <form action="/users" method="get" class="navbar-form navbar-left">
    注册时间：
    <input type="text" name="create_time_begin"  class="form-control datetime_picker_battle1" placeholder="开始时间"> ~
    <input type="text" name="create_time_end"  class="form-control datetime_picker_battle2" placeholder="结束时间">
    <button type="submit" class="btn btn-success">搜索</button>
    <button type="button" class="btn btn-success"><a href="javascript:void(0);" onclick="dowload_csv(4)" style="color:#fff">导出csv</a></button> 
  </form>

</div>

<p class="sub-header">报表>用户管理>用户列表</p>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>登录名</th>
      <th>昵称</th>
      <th>邮箱</th>
      <th>电话</th>
      <th>性别</th>
      <th>注册时间</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user|%>
        <tr>
          <td><%= user.login_name %></td>
          <td><%= user.nick_name %></td>
          <td><%= user.email%></td>
          <td><%= user.mobile %></td>
          <td><%= User::SEX[user.sex] %></td>
          <td><%= user.create_time.strftime('%Y-%m-%d %H:%M:%S')%></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%=paginate @users%>
