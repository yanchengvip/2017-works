<div class="row"><p class="sub-header">营销管理>用户>注册激活</p></div>
<%= render partial: 'ulf_search' %>
<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>总数</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%=@total_count%></td>
      </tr>
    </tbody>
  </table>

<div class="row">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>APP版本</th>
        <th>设备类型</th>
        <th>设备ID</th>
        <th>创建时间</th>
        <!-- <th>操作</th> -->
      </tr>
    </thead>
    <tbody>
      <% @ulfs && @ulfs.each_with_index do |ulf, index| %>
      <tr id="tr_<%= ulf.id %>">
        <td><%= ulf.id %></td>
        <td><%= ulf.app_version %></td>
        <td><%= ulf.app_type %></td>
        <td><%= ulf.device_id %></td>
        <td><%= ulf.created_at&.strftime("%Y-%m-%d %H:%m:%S") %></td>
        <!-- <td>
          <%#= link_to '查看', ulf_path(ulf), class: 'btn btn-sm btn-info' %>
          <%#= link_to '删除', ulf_path(ulf), method: :delete, data: {confirm: '确定删除吗？'}, class: 'btn btn-sm btn-danger' %>
        </td> -->
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @ulfs %>
