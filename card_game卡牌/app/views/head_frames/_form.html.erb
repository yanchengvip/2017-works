<div class="form-group row mt_20">
  <label for="" class="col-sm-2 control-label">名称</label>
  <div class="col-sm-8">
    <%= f.text_field :head_frame_name, placeholder: '名称', class: 'form-control', required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="input" class="col-sm-2 control-label">缩略图</label>
  <div class="col-sm-8">
    <%= render 'images/upload_single_image' %>
  </div>
</div>

<div class="form-group row">
  <label class="col-sm-2 control-label">使用限制</label>
  <div class="col-sm-8">
    <div class="radio">
      <label class="mr_30 mb_20"><%= radio_button_tag :always, 0, is_always(@head_frame) %>永久</label><br>
      <label>
        <%= radio_button_tag :always, 1, not_always(@head_frame) %>
        <%= f.text_field :use_limit %>H
      </label>
    </div>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="head_frame_game_type" class="col-sm-2 control-label">解锁条件</label>
  <div class="col-sm-8">
    <%= f.select :unlock_condition, options_for_select(HeadFrame::UNLOCKCT.to_a.map(&:reverse) + GluttonLevel.levels, select_level(@head_frame)), {}, class: 'form-control', required: "required" %>
  </div>
  <%#= f.select :game_type, options_for_select([['注册赠送', 0], ['能量兑换', 1]] + MsgChat::GAME_TYPE.to_a.map(&:reverse), @head_frame.game_type), {}, class: 'form-control', required: "required" %>
</div>

<div class="form-group row mt_20">
  <label for="" class="col-sm-2 control-label">描述</label>
  <div class="col-sm-8">
    <%= f.text_area :unlock_describe, placeholder: '描述', class: 'form-control', required: "required", rows: 6 %>
  </div>
</div>

<div class="clearfix"></div>

<div class="form-group row mt_50">
  <div class="col-sm-offset-4 col-sm-4">
    <%= link_to '取消', head_frames_path, class: 'btn btn-default mr_20 btn-lg', role: 'button' %>
    <%= f.submit '保存', class: 'btn btn-primary btn-lg', id: 'head_frame_submit' %>
  </div>
</div>

