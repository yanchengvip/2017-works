  <!--</div>-->


  <div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">战役规则</label>
    <div class="col-sm-8">
      <select class="select2-picker" name="battle_rule_id" style="width: 100%">
        <option value=0>请选择</option>
        <% @battle_rules.each do |br| %>
            <option value=<%= br.id %>><%= br.name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">战役描述</label>
    <div class="col-sm-8">
      <textarea class="form-control" name="desc" maxlength="60" rows="3" id="battle_desc_input" required="required"
                onkeyup="validate_words_length(60,'battle_desc_input','desc_last_num')" placeholder="战役描述，最多60字"></textarea>
      <p class="bg-danger p_last_num" id="desc_last_num"></p>
    </div>

  </div>

  <div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">展示图片</label>
    <div class="col-sm-8">
      <%= render 'images/upload_multiple_image' %>
    </div>

  </div>

  <div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">战役商品</label>
    <div class="col-sm-8">
      <%= render 'battles/add_battle_product' %>
    </div>

  </div>


  <div class="form-group row">
    <label class="col-sm-2">领奖设置</label>
    <div class="col-sm-10">
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox" value='1' name="award_setting1" checked> 可领实物
        </label>
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox" value='2' name="award_setting2" checked> 可将奖品兑换成
          <input class="form-check-input" type="number" min="1" max="99999999" step='1'   name="exchange_micro_ticket">功勋
        </label>
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox" value='3' name="award_setting3" checked> 可将奖品兑换成礼包
        </label>
      </div>

    </div>
  </div>

  <div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">战役胜利兑换礼包</label>
    <div class="col-sm-8">
      <%= render 'battles/battle_package_table' %>
    </div>

  </div>

  <div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">战役失败获赠的鼓励礼包</label>
    <div class="col-sm-8">
      <%= render 'battles/battle_package_table_fail' %>
    </div>

  </div>


  <div class="form-group row">
    <label for="input" class="col-sm-4 col-form-label"></label>
    <div class=" col-sm-8">
      <button type="submit" class="btn-lg btn-primary">保存</button>
    </div>
  </div>

</form>

