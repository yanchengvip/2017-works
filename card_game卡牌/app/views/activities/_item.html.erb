<div class="form-group row">
  <table class="table table-striped table-hover" id="activity_items_table">
    <thead>
      <tr class="info">
        <th>赠品类型</th>
        <th width="30%">赠品范围<span class="gift_range_text">（单选）</span></th>
        <!-- <th>价格</th> -->
        <th>赠品数量</th>
        <th></th>
      </tr>
    </thead>
    <tbody id="activity_items_body">
      <% if @activity.activity_items.present? %>
        <%= render partial: 'item_own' %>
      <% end %>
    </tbody>
  </table>

  <%# unless @activity.activity_items.present? %>
    <%= link_to '添加', 'javascript:void(0)', id: 'add_activity_item', class: ' btn btn-success' %>
  <%# end %>
</div>

<%= render partial: 'item_type_modal' %>
<%= render partial: '/packages/error_modal' %>


<script type="text/javascript">
  $(document).on('turbolinks:load', function () {
    // 添加
    $('#add_activity_item').on('click', function(){
      if($('.content_tr').length >= 1){
        elert('能量只能添加一个！')
        return false
      }
      $('#choseItemTypeModal').modal('show')
    })
  })
</script>
