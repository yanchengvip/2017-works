<div class="lead text-right well">
  <p><%= link_to '添加卡牌', new_card_path, class: 'btn btn-primary', role: 'button' %></p>
</div>

<div class="">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>序号</th>
        <th>卡牌图片</th>
        <th>卡牌名称</th>
        <th>介绍</th>
        <th>分类</th>
        <th>价格</th>
        <th>最后更新</th>
        <th>操作ID</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @cards.each_with_index do |card, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= image_tag card.icon_url %></td>
        <td><%= card.name %></td>
        <td><%= card.summary %></td>
        <td><%= Card::CARDTYPE[card.card_type] %></td>
        <td><%= card.price %></td>
        <td><%= card.updated_at %></td>
        <td><%= card.operator_name %></td>
        <td>
          <%= link_to '查看', card_path(card), role: 'button', class: 'btn btn-info'  %>
          <%= link_to '修改', edit_card_path(card), role: 'button', class: 'btn btn-primary' %>
          <%#= link_to '删除', card_path(card), method: :delete, data: {confirm: '确定要删除吗'}, role: 'button', class: 'btn btn-danger' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @cards %>
