<div class="row placeholders well">
  <%= form_for game_product_tags_path, html: {method: :get, class: 'navbar-form navbar-left', id: 'search_form'} do |f| %>
    <div class="form-group row">
      <span>分类名称：</span>
      <%= text_field_tag "q[name_cont]", params[:q][:name_cont], class: 'form-control mr_20', placeholder: '分类名称' %>

      <%= f.submit '查询', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
