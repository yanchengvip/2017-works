<%= simple_form_for(@sku, url: "/supplier/skus/#{@sku.id}", method: "put", :html => { :class => 'form-horizontal' } ) do |f| %>

  <div class="form-inputs">
    <%= f.input :product_id,  disabled: true %>
    <%= f.input :name %>
    <%= f.input :amount %>
    <%= f.input :code %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "更新" %>
  </div>
<% end %>
