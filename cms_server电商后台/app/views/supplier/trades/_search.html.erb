<div class="widefat">
  <div class="content mt40">
    <div class="right w970">
      <div class="clearfix">
        <div>
          <%= form_for supplier_trades_path, html: {method: :get, class: 'navbar-form navbar-left', id: 'search_form'} do |f| %>
            <div class="form-group row" style="margin-bottom: 5px">
              <span>订单编号:</span>
              <%= text_field_tag "q[identifier_eq]", params[:q][:identifier_eq], class: 'form-control mr_20', placeholder: '订单编号' %>
              <span>SPU-ID:</span>
              <%= text_field_tag "q[units_product_id_eq]", params[:q][:units_product_id_eq], class: 'form-control mr_20', placeholder: 'SPU-ID' %>
              <span>SKU-ID:</span>
              <%= text_field_tag "q[auction_skus_id_eq]", params[:q][:auction_skus_id_eq], class: 'form-control mr_20', placeholder: 'SKU-ID' %>
              <span>原厂货号:</span>
              <%= text_field_tag "q[units_product_identifier_eq]", params[:q][:units_product_identifier_eq], class: 'form-control mr_20', placeholder: '原厂货号' %>
            </div>

            <div class="form-group row" style="margin-bottom: 5px">
              <span>品牌名称:</span>
              <%= select_tag "q[units_product_brand_id_eq]", options_for_select([["品牌名称", nil]] + Auction::Brand.active.map{|ab| [ab.chinese, ab.id]}, params[:q][:units_product_brand_id_eq]), class: 'form-control mr_20', style: 'width:172px' %>
              <span>适用对象:</span>
              <%= select_tag "q[units_product_target_cont]", options_for_select([["适用对象", nil]] + Auction::Product::TARGET.to_a.map(&:reverse), params[:q][:units_product_target_cont]), class: 'form-control mr_20', style: 'width:172px' %>
              <span>订单状态:</span>
              <%= select_tag "q[status_cont]", options_for_select([["订单状态", nil]] + Supplier::Trade::STATUS.to_a.map(&:reverse), params[:q][:status_cont]), class: 'form-control mr_20', style: 'width:172px' %>
              <span>一级分类:</span>
              <%= select_tag "q[units_product_category1_id_eq]", options_for_select([["商品一级分类", nil]] + Auction::Category.active.map{|ac| [ac.name, ac.id]}, params[:q][:units_product_category1_id_eq]), class: 'form-control mr_20', style: 'width:172px' %>
            </div>

            <div class="form-group row" style="margin-bottom: 5px">
              <span>二级分类:</span>
              <%= select_tag "q[units_product_category2_id_eq]", options_for_select([["商品二级分类", nil]] + Auction::Category.active.map{|ac| [ac.name, ac.id]}, params[:q][:units_product_category2_id_eq]), class: 'form-control mr_30', style: 'width:172px' %>
              <span>用户ID:</span>
              <%= text_field_tag "q[account_id_eq]", params[:q][:account_id_eq], class: 'form-control mr_30', placeholder: '用户ID' %>
              <span>快递单号:</span>
              <%= text_field_tag "q[delivery_identifier_eq]", params[:q][:delivery_identifier_eq], class: 'form-control mr_20', placeholder: '快递单号' %>
            </div>
            <div class="form-group row" style="margin-bottom: 5px">
              <span>收件姓名:</span>
              <%= text_field_tag "name", params[:name], class: 'form-control mr_20', placeholder: '收件人姓名' %>
              <span>收件手机:</span>
              <%= text_field_tag "q[delivery_phone_cont]", params[:q][:delivery_phone_cont], class: 'form-control mr_20', placeholder: '收件人手机' %>
              <%= f.submit '搜索', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
