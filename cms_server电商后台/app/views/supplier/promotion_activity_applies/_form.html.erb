<%= simple_form_for(@supplier_promotion_activity_apply) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :promotion_activity_id %>
    <%= f.input :provider_id %>
    <%= f.input :status %>
    <%= f.input :product_count %>
    <%= f.input :active %>
    <%= f.input :apply_time %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
