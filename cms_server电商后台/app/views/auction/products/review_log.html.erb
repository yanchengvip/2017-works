<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>SPU-ID</th>
      <th>商品名称</th>
      <th>供货价</th>
      <th>优众价</th>
      <th>毛利率</th>
      <th>审核时间</th>
      <th>审核人</th>
      <th>审核结果</th>
    </tr>
  </thead>
  <tbody>
    <% @review_logs && @review_logs.each_with_index do |review_log, index| %>
    <tr id="tr_<%= review_log.id %>">
      <td><%= review_log.table&.id %></td>
      <td><%= review_log.product_name %></td>
      <td><%= review_log.provider_price %></td>
      <td><%= review_log.discount %></td>
      <td><%= (review_log.profit_margin * 100).round(1) rescue 0 %>%</td>
      <td><%= review_log.created_at&.strftime('%Y-%m-%d %H:%M:%S') %></td>
      <td><%= review_log.editor&.name %></td>
      <td><%= review_log.review_result %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @review_logs %>
