<tr class="fields content_tr imgtr">
  <td width="8%"><%= link_to '删除', 'javascript:void(0)', class: 'del_item_new link' %></td>

  <td width="18%">
    <input type="number" name="pimages[][sequence]" placeholder="排序" required class="form-control sequence_td" min='0' max='99999999' step='1'>
  </td>

  <td width="49%">
    <textarea name="pimages[][description]" cols="10" rows="5" placeholder="描述（选填）" class="form-control"></textarea>
  </td>

  <td width="25%">
    <%#= render partial: '/supplier/products/upload_image', locals: {prev_id: @img_id, item_name: "pimages[][large]", item_id: "pimages_#{@img_id}", upload_btn_id: "upload_#{@img_id}", preview_id: "preview_#{@img_id}", image_path: '', model_name: 'ProductImage'} %>
    <input  type="hidden"  name="pimages[][large]" id="<%= @imageurl %>" value="<%= @imageurl %>" class="form-control">
    <%= image_tag (@imageurl + '.m110.jpg') || '', width: 100, height: 100 if @imageurl %>
  </td>

</tr>
