<div class="row placeholders well">
  <%= form_for review_log_auction_products_path, html: {method: :get, class: 'navbar-form navbar-left', id: 'cw_search_form'} do |f| %>
    <div class="form-group row">
      <span>SPU-ID：</span>
      <%= text_field_tag "q[product_id_eq]", params[:q][:product_id_eq], class: 'form-control', placeholder: 'SPU-ID' %>
      <span>审核人：</span>
      <%= text_field_tag 'q[editor_name_cont]', params[:q][:editor_name_cont], class: 'form-control', placeholder: '审核人' %>
      <span class="form-group">
        <label>审核时间：</label>
        <span class='input-group date'>
          <%= text_field_tag "q[created_at_gteq]", params[:q][:created_at_gteq], class: 'custom_input_md' %>至
          <%= text_field_tag "q[created_at_lteq]", params[:q][:created_at_lteq], class: 'custom_input_md' %>
        </span>
      </span>

      <%= f.submit '搜索', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
