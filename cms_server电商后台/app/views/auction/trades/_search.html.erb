<div class="collapse breadcrumb-collapse-s " id="trade_search">
  <div class="well">
    <form action="/auction/trades" method="get" class="form-inline">

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">用户订单ID:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[auction_trade_id_eq]" placeholder="用户订单ID">
        </div>
      </div>

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">商家订单ID:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[supplier_trade_id_eq]" placeholder="商家订单ID">
        </div>
      </div>

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">订单号:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[identifier_cont]" placeholder="用户订单号">
        </div>
      </div>


      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">手机:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[auction_trade_contact_phone_cont]" placeholder="收件人手机">
        </div>
      </div>


      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">收货姓名:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[auction_trade_contact_name_cont]" placeholder="收件人姓名">
        </div>
      </div>

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">用户ID:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[user_id_eq]" placeholder="用户ID">
        </div>
      </div>

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">单号:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[supplier_trade_delivery_identifier_eq]" placeholder="快递单号">
        </div>
      </div>

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">快递公司:</label>
        <div class="col-sm-8">
          <select class="select2-picker form-control mb_5" name="q[supplier_trade_delivery_service_eq]">
            <option value="">请选择</option>
            <% Auction::Trade::DELIVERYSERVICE.to_a.each do |s| %>
                <option value="<%= s[0] %>"><%= s[1] %></option>
            <% end %>
          </select>
        </div>
      </div>

      <!--<div class="form-group col-sm-4">-->
        <!--<label class="col-sm-4 text-right">订单状态:</label>-->
        <!--<div class="col-sm-8">-->
          <!--<select class="select2-picker form-control" name="q[status_eq]">-->
            <!--<option value="">请选择</option>-->
            <!--<%# Auction::Trade::STATUS.to_a.each do |s| %>-->
                <!--<option value="<%#= s[0] %>"><%#= s[1] %></option>-->
            <!--<%# end %>-->
          <!--</select>-->
        <!--</div>-->
      <!--</div>-->

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">排序:</label>
        <div class="col-sm-8">
          <select class="select2-picker form-control" name="q[sorts]">
            <option value="created_at desc">创建时间 ↓</option>
            <option value="created_at asc">创建时间 ↑</option>
          </select>
        </div>
      </div>

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">开始时间:</label>
        <div class="col-sm-8">
            <input type='text' class="form-control trade_search_dt6" placeholder="创建时间" name="q[created_at_gteq]"/>
        </div>
      </div>

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">结束时间:</label>
        <div class="col-sm-8">
            <input type='text' class="form-control trade_search_dt7" placeholder="创建时间" name="q[created_at_lteq]"/>
        </div>
      </div>

      <div style="margin:0 auto;width:200px;">
        <button type="submit" class="btn btn-primary btn-lg btn-block">查询</button>
      </div>

    </form>

  </div>
</div>

<style>
  .form-inline .form-group {
    margin-bottom: 10px;
  }
</style>