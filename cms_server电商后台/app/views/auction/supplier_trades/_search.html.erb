<!--供应商表订单查询-->
<div class="collapse breadcrumb-collapse-s" id="supplier_trade_search">
  <div class="well">
    <form action="/auction/supplier_trades" method="get" class="form-inline">

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">订单ID:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[id_eq]" placeholder="订单ID">
        </div>
      </div>
      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">用户订单号:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[auction_trade_identifier_cont]" placeholder="用户订单号">
        </div>
      </div>
      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">商户订单号:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[identifier_cont]" placeholder="商户订单号">
        </div>
      </div>

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">快递单号:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[delivery_identifier_eq]" placeholder="快递单号">
        </div>
      </div>
      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">收件手机:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[delivery_phone_eq]" placeholder="收件人手机">
        </div>
      </div>
      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">收件姓名:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[contact_name_cont]" placeholder="收件人姓名">
        </div>
      </div>





      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">快递公司:</label>
        <div class="col-sm-8">
          <select class="select2-picker form-control" name="q[delivery_service_eq]">
            <option value="">请选择</option>
            <% Auction::Trade::DELIVERYSERVICE.to_a.each do |s| %>
                <option value="<%= s[0] %>"><%= s[1] %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">状态:</label>
        <div class="col-sm-8">
          <select class="select2-picker form-control" name="q[status_eq]">
            <option value="">请选择</option>
            <% Auction::Trade::STATUS.to_a.each do |s| %>
                <option value="<%= s[0] %>"><%= s[1] %></option>
            <% end %>
          </select>
        </div>
      </div>

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">状态:</label>
        <div class="col-sm-8">
          <select class="select2-picker form-control" name="q[sorts]">
            <option value="created_at desc">创建时间 ↓</option>
            <option value="created_at asc">创建时间 ↑</option>
          </select>
        </div>
      </div>

      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">用户ID:</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="q[account_id_eq]" placeholder="用户ID">
        </div>
      </div>
      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">开始时间:</label>
        <div class="col-sm-8">
          <input type='text' class="form-control trade_search_dt8" placeholder="创建时间" name="q[created_at_gteq]"/>
        </div>
      </div>
      <div class="form-group col-sm-4">
        <label class="col-sm-4 text-right">结束时间:</label>
        <div class="col-sm-8">
          <input type='text' class="form-control trade_search_dt9" placeholder="创建时间" name="q[created_at_lteq]"/>
        </div>
      </div>

      <div style="margin:0 auto;width:200px;">
        <button type="submit" class="btn btn-primary btn-lg btn-block">查询</button>
      </div>


    </form>
  </div>
</div>



<!--退货管理查询-->

<div class="collapse breadcrumb-collapse-s" id="return_trade_search">
  <div class="well">
    <form action="/auction/supplier_trades/returns" method="get" class="form-inline">
      <div class="form-group">
        <label>UnitID</label>
        <input type="text" class="form-control" name="q[id_eq]" placeholder="ID">
      </div>
      <div class="form-group">
        <label>商城订单号</label>
        <input type="text" class="form-control" name="q[trade_identifier_cont]" placeholder="商城订单号">
      </div>

      <div class="form-group">
        <label>状态</label>
        <select class="select2-picker form-control" name="q[status_eq]">
          <option value="">请选择</option>
          <% Auction::Unit::STATUS.to_a.each do |s| %>
              <% if !s[0].present? %>
                  <option value="normal">正常</option>
              <% else %>
                  <option value="<%= s[0] %>"><%= s[1] %></option>
              <% end %>

          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label>排序</label>
        <select class="select2-picker form-control" name="q[sorts]">
          <option value="created_at desc">创建时间 ↓</option>
          <option value="created_at asc">创建时间 ↑</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">查询</button>
    </form>
  </div>
</div>



