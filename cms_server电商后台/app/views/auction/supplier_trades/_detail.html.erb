<%= render 'auction/trades/user'%>

<div class="panel panel-info">
  <div class="panel-heading"><strong>订单信息</strong></div>
  <ul class="list-group">
    <li class="list-group-item">ID：<%= @supplier_trade.id %></li>
    <li class="list-group-item">订单状态：<span class="red"><%= Auction::Trade::STATUS[@supplier_trade.status]%> </span></li>
    <li class="list-group-item">总价格：<%= @supplier_trade.price.to_f %></li>
    <!--<li class="list-group-item">U元价格：<%#=  @auction_trade.u_price.to_f %></li>-->
    <li class="list-group-item">支付价格：<span class="red"><%= @supplier_trade.payment_price.to_f %></span></li>
    <li class="list-group-item">付款：<%= Auction::Trade::PAYMENTSERVICE[@auction_trade.payment_service] %></li>
    <li class="list-group-item">创建时间：<%= @supplier_trade.created_at.strftime('%Y-%m-%d')  %></li>
    <li class="list-group-item">备注：<span><%= @supplier_trade.remark %> </span></li>
  </ul>
</div>

<div class="panel panel-info">
  <div class="panel-heading"><strong>商品信息</strong></div>
  <%= render 'auction/trades/product',data: {units: @supplier_trade.units}%>
</div>




