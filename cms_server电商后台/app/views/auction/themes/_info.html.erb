<div class="form-group row mt_20">
  <label for="auction_theme_title" class="col-sm-2 control-label">标题</label>
  <div class="col-sm-8">
    <%= f.text_field :title, placeholder: '标题', class: 'form-control', required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_theme_subtitle" class="col-sm-2 control-label">副标题</label>
  <div class="col-sm-8">
    <%= f.text_field :subtitle, placeholder: '副标题', class: 'form-control', required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_theme_pic" class="col-sm-2 control-label">图片</label>
  <div class="col-sm-8">
    <%= render partial: 'images/upload_single_image', locals: {prev_id: 'pic', item_name: "auction_theme[pic]", item_id: "auction_theme_pic", upload_btn_id: 'upload_pic', preview_id: 'preview_pic', image_path: @auction_theme.pic, model_name: @auction_theme.class.to_s} %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_theme_publish_time" class="col-sm-2 control-label">发布时间</label>
  <div class="col-sm-8">
    <%= f.text_field :publish_time, placeholder: '发布时间', class: 'form-control', id: "datetimepicker1", required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_theme_down_time" class="col-sm-2 control-label">下线时间</label>
  <div class="col-sm-8">
    <%= f.text_field :down_time, placeholder: '下线时间', class: 'form-control', id: "datetimepicker2", required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_theme_theme_type" class="col-sm-2 control-label">类型</label>
  <div class="col-sm-8">
    <%= f.select :theme_type, options_for_select([['无', nil]] + Auction::Theme::THEME_TYPE.to_a.map(&:reverse), @auction_theme.theme_type), {}, class: 'form-control is_select2' , onchange: "control()"%>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_theme_keyword" class="col-sm-2 control-label">外链url(app推广栏外链使用)</label>
  <div class="col-sm-8">
    <%= f.text_field :link_url, placeholder: '外链url', class: 'form-control'%>
  </div>
</div>

<div class="form-group row mt_20" id= "auction_theme_keyword">
  <label for="auction_theme_keyword" class="col-sm-2 control-label">搜索关键词</label>
  <div class="col-sm-8">
    <%= f.text_field :keyword, placeholder: '搜索关键词', class: 'form-control' %>
  </div>
</div>

<div class="form-group row mt_20" id="auction_theme_brand_id">
  <label for="auction_theme_brand_id" class="col-sm-2 control-label">品牌ID</label>
  <div class="col-sm-8">
    <%= f.text_field :brand_id, placeholder: '品牌ID，多个用英文逗号分隔', pattern: "^\\d+(,\\d+)*", class: 'form-control' %>
  </div>
</div>

<div class="form-group row mt_20" id="auction_theme_target">
  <label for="auction_theme_target" class="col-sm-2 control-label">性别</label>
  <div class="col-sm-8">
    <%= f.select :target, options_for_select(Auction::Theme::TARGET.to_a.map(&:reverse), @auction_theme.target), {}, class: 'form-control is_select2' %>
  </div>
</div>

<div class="form-group row mt_20" id="auction_theme_unsold_count_gteq">
  <label for="auction_theme_unsold_count_gteq" class="col-sm-2 control-label">库存数量最小值</label>
  <div class="col-sm-8">
    <%= f.text_field :unsold_count_gteq, placeholder: '库存数量最小值，如有库存为1， 无库存为0', class: 'form-control', type: 'number', min: 0, max: 9999999 %>
  </div>
</div>

<div class="form-group row mt_20" id="auction_theme_category1_id">
  <label for="auction_product_category1_id" class="col-sm-2 control-label">一级分类</label>
  <div class="col-sm-8">
    <%= f.select :category1_id, options_for_select([['请选择', nil]] + Auction::Category.active.map{|ac| [ac.name, ac.id]} ,@auction_theme&.category1_id), {}, class: 'form-control is_select2 category_select theme', id: 'auction_product_category1_id' %>
  </div>
</div>

<div class="form-group row mt_20" id="auction_theme_category2_id">
  <label for="auction_product_category2_id" class="col-sm-2 control-label">二级分类</label>
  <div class="col-sm-8">
    <% if params[:action] == 'edit' %>
      <%= f.select :category2_id, options_for_select([['无', nil]] + Auction::Category.active.map{|ac| [ac.name, ac.id]} ,@auction_theme.category2_id), {}, class: 'form-control is_select2 category_select theme', id: 'auction_product_category2_id' %>
    <% elsif params[:action] == 'new' || @type == 'new' %>
      <%= f.select :category2_id, options_for_select([['无', nil]], @auction_theme.category2_id), {}, class: 'form-control is_select2 category_select theme', id: 'auction_product_category2_id' %>
    <% end %>
  </div>
</div>

<div class="form-group row mt_20" id="auction_theme_category3_id">
  <label for="auction_product_category3_id" class="col-sm-2 control-label">三级分类</label>
  <div class="col-sm-8">
    <% if params[:action] == 'edit' %>
      <%= f.select :category3_id, options_for_select([['无', nil]] + Auction::Category.active.map{|ac| [ac.name, ac.id]} ,@auction_theme.category3_id), {}, class: 'form-control is_select2 category_select theme', id: 'auction_product_category3_id' %>
    <% elsif params[:action] == 'new' || @type == 'new' %>
      <%= f.select :category3_id, options_for_select([['无', nil]], @auction_theme.category3_id), {}, class: 'form-control is_select2 category_select theme', id: 'auction_product_category3_id' %>
    <% end %>
  </div>
</div>

<div class="form-group row mt_20" id="auction_theme_sort_key">
  <label for="auction_theme_sort_key" class="col-sm-2 control-label">排序关键字</label>
  <div class="col-sm-8">
    <%= f.select :sort_key, options_for_select([['无', nil]] + Auction::Theme::SORT_KEY.to_a.map(&:reverse), @auction_theme.sort_key), {}, class: 'form-control is_select2' %>
  </div>
</div>

<div class="form-group row mt_20" id="auction_theme_sort_method">
  <label for="auction_theme_sort_method" class="col-sm-2 control-label">排序方式</label>
  <div class="col-sm-8">
    <%= f.select :sort_method, options_for_select([['无', nil]] + Auction::Theme::SORT_METHOD.to_a.map(&:reverse), @auction_theme.sort_method), {}, class: 'form-control is_select2' %>
  </div>
</div>

<div class="form-group row mt_20" id="auction_theme_price_gt">
  <label for="auction_theme_price_gt" class="col-sm-2 control-label">价格区间 最小值</label>
  <div class="col-sm-8">
    <%= f.text_field :price_gt, placeholder: '价格区间 最小值', class: 'form-control', required: "required", type: 'number', min: 0, max: 9999999 %>
  </div>
</div>

<div class="form-group row mt_20" id="auction_theme_price_lt">
  <label for="auction_theme_price_lt" class="col-sm-2 control-label">价格区间 最大值</label>
  <div class="col-sm-8">
    <%= f.text_field :price_lt, placeholder: '价格区间 最大值', class: 'form-control', required: "required", type: 'number', min: 0, max: 9999999 %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_theme_rank" class="col-sm-2 control-label">排序</label>
  <div class="col-sm-8">
    <%= f.text_field :rank, placeholder: '排序 小的在前', class: 'form-control', required: "required", type: 'number', min: 0, max: 9999999 %>
  </div>
</div>
