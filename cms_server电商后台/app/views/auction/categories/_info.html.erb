<div class="form-group row mt_20">
  <label for="auction_category_measures" class="col-sm-2 control-label">尺寸</label>
  <div class="col-sm-8">
    <div class="input-group">
      <%= f.text_field :measures, placeholder: '尺寸', class: 'form-control', required: "required" %>
      <span class="input-group-addon">（用英文逗号分隔）</span>
    </div>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_category_ranges" class="col-sm-2 control-label">价格区间</label>
  <div class="col-sm-8">
    <div class="input-group">
      <%= f.text_field :ranges, placeholder: '价格区间', class: 'form-control', required: "required" %>
      <span class="input-group-addon">（用英文逗号分隔）</span>
    </div>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_category_male" class="col-sm-2 control-label">男士/女士</label>
  <div class="col-sm-8">
    <%= f.check_box :male, placeholder: '男士', class: '' %>
    <label for="auction_category_male" class="mr_50">男士</label>
    <%= f.check_box :female, placeholder: '女士', class: '' %>
    <label for="auction_category_female">女士</label>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_category_attribute_ids" class="col-sm-2 control-label">属性列表</label>
  <div class="col-sm-8">
    <%= f.select :attribute_ids, options_for_select(Auction::ProductAttribute.active.map{|aa| [aa.name, aa.id]} ,@auction_category.attribute_ids&.split(',')&.map(&:to_i)), {}, class: 'form-control is_select2', required: "required", multiple: true %>
  </div>
</div>

