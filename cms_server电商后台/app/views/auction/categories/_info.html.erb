<div class="form-group row mt_20">
  <%= f.hidden_field :user_id, value: current_user&.id %>
  <label for="auction_category_parent_id" class="col-sm-2 control-label">父类</label>
  <div class="col-sm-8">
    <%= f.select :parent_id, options_for_select([['无', nil]] + Auction::Category.active.map{|ac| [ac.name, ac.id]} ,@auction_category.parent_id), {}, class: 'form-control is_select2' %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_category_name" class="col-sm-2 control-label">名称</label>
  <div class="col-sm-8">
    <%= f.text_field :name, placeholder: '名称', class: 'form-control', required: "required" %>
  </div>
</div>

