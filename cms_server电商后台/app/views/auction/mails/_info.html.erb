<div class="form-group row mt_20">
  <label for="auction_mail_title" class="col-sm-2 control-label">标题</label>
  <div class="col-sm-8">
    <%= f.text_field :title, placeholder: '标题', class: 'form-control', required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_mail_content" class="col-sm-2 control-label">HTML代码</label>
  <div class="col-sm-8">
    <%= f.text_area :content, rows: 12, placeholder: 'HTML代码', class: 'tinymce' %>
  </div>
</div>

<%= render partial: 'shared/tinymce', locals: {text_id: 'auction_mail_content', model_name: @auction_mail.class.to_s} %>
