<div class="form-group row mt_20">
  <label for="auction_user_id" class="col-sm-2 control-label">用户ID</label>
  <div class="col-sm-8">
    <%= f.text_field :id, placeholder: '用户ID', class: 'form-control', required: "required", type: 'number', min: 1, id: 'auction_user_id' %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_user_level_id" class="col-sm-2 control-label">VIP等级</label>
  <div class="col-sm-8">
    <%= f.select :level_id, options_for_select(Auction::Level.active.map{|al| [al.name, al.id]},@auction_user.level_id), {}, class: 'form-control is_select2' %>
  </div>
</div>
