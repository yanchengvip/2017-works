<%= f.hidden_field :editor_id, value: current_user&.id %>

<div class="form-group row mt_20">
  <label for="auction_attribute_name" class="col-sm-2 control-label">名称</label>
  <div class="col-sm-8">
    <%= f.text_field :name, placeholder: '名称', class: 'form-control', required: "required", onkeyup: "validate_length_of_words(this.id,4)" %>
    <p class="bg-danger p_last_num left_str_num"></p>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_attribute_is_require" class="col-sm-2 control-label">是否必选</label>
  <div class="col-sm-8">
    <%= f.check_box :is_require %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_attribute_input_type" class="col-sm-2 control-label isrequire">输入类型</label>
  <div class="col-sm-8">
    <%= f.select :input_type, options_for_select(Auction::ProductAttribute::INPUT_TYPE.to_a.map(&:reverse), @auction_attribute.input_type), {}, class: 'form-control', required: "required" %>
  </div>
</div>

<div class="form-group row mt_20">
  <label for="auction_attribute_option_list" class="col-sm-2 control-label">选项列表</label>
  <div class="col-sm-8">
    <%= f.text_area :option_list, rows: 25, placeholder: '选项列表', class: 'form-control', required: "required" %>
    （每行一个）
  </div>
</div>

