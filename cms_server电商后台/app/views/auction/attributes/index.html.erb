
<!-- <div class="row"> -->
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th style="max-width: 100px !important">名称</th>
        <th width="45%">选项列表</th>
        <!-- <th>可搜索</th> -->
        <th>创建时间</th>
        <th>编辑</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @manage_attributes && @manage_attributes.each_with_index do |manage_attribute, index| %>
      <tr id="tr_<%= manage_attribute.id %>">
        <td><%= manage_attribute.id %></td>
        <td><%= manage_attribute.name %></td>
        <td><%= manage_attribute.option_list %></td>
        <!-- <td><%#= manage_attribute.searchable ? '是' : '否' %></td> -->
        <td><%= manage_attribute.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= manage_attribute.editor&.name %></td>
        <td>
        <% if can? 'auction/attributes#show' %>
          <%= link_to '查看', auction_attribute_path(manage_attribute), class: 'btn btn-sm btn-info' %>
        <% end %>
        <% if can? 'auction/attributes#edit' %>
          <%= link_to '编辑', edit_auction_attribute_path(manage_attribute), class: 'btn btn-sm btn-primary' %>
        <% end %>
        <%# if can? 'auction/attributes#destroy' %>
          <%#= link_to '删除', "javascript:void(0)", onclick: "manage_attribute_delete(#{manage_attribute.id}, '#{manage_attribute.name}')", role: 'button', class: 'btn btn-sm btn-danger' %>
        <%# end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<!-- </div> -->

<%= paginate @manage_attributes %>



