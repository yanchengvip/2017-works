<table class="table table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>角色名称</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @manage_roles.each do |manage_role| %>
      <tr>
        <td><%= manage_role.id%></td>
        <td><%= manage_role.name%></td>
        <td>
          <% if current_user.can?("manage/roles#edit")%>
            <%= link_to '编辑', edit_manage_role_path(manage_role),class: "btn btn-warning btn-sm" %>
          <% end %>
          <% if current_user.can?("manage/roles#destroy")%>
            <%= link_to '删除', manage_role, method: :delete, data: { confirm: '
Are you sure?

你确定吗？' },class: "btn btn-danger btn-sm" %>
          <% end %>


        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @manage_roles %>
