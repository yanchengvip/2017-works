<p id="notice"><%= notice %></p>

<h1>Trades</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Mt4 account</th>
      <th>Order code</th>
      <th>Symbol</th>
      <th>Digits</th>
      <th>Cmd</th>
      <th>Volume</th>
      <th>Open time</th>
      <th>Open price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= trade.account_id %></td>
        <td><%= trade.mt4_account %></td>
        <td><%= trade.order_code %></td>
        <td><%= trade.symbol %></td>
        <td><%= trade.digits %></td>
        <td><%= trade.cmd %></td>
        <td><%= trade.volume %></td>
        <td><%= trade.open_time %></td>
        <td><%= trade.open_price %></td>
        <td><%= link_to 'Show', trade %></td>
        <td><%= link_to 'Edit', edit_trade_path(trade) %></td>
        <td><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Trade', new_trade_path %>
